{
  "name": "miracle-hides-keys",
  "version": "1.0.0",
  "description": "create keys for symmetric and asymmetric encryption",
  "main": "index.js",
  "scripts": {
    "dist": "npm run dist:all && npm run copy:all",
    "dist:all": "npm run dist:client:es6 && npm run dist:client:react && npm run dist:client:scss && npm run dist:server:nest",
    "dist:client:es6": "npm run dist --prefix ./src-client-es6",
    "dist:client:react": "npm run build --prefix ./src-client-react",
    "dist:client:scss": "npm run dist --prefix ./src-scss",
    "dist:server:nest": "npm run build --prefix ./src-server-nest",
    "precopy": "npx mkdirp ./src-server-nest/dist/client",
    "copy:all": "npm run copy:client:es6 && npm run copy:client:react && npm run copy:client:scss:es6",
    "copy:client:es6": "npx copyfiles -u 2 ./src-client-es6/dist/**/* ./src-server-nest/dist/client/es6",
    "copy:client:react": "npx copyfiles -u 2 ./src-client-react/build/**/* ./src-server-nest/dist/client/react",
    "copy:client:scss:es6": "npx copyfiles -u 2 ./src-scss/dist/**/* ./src-server-nest/dist/client/es6",
    "start": "npm run start --prefix src-server-nest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelDiers/miracle-hides.git"
  },
  "author": "Michael Diers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MichaelDiers/miracle-hides/issues"
  },
  "homepage": "https://github.com/MichaelDiers/miracle-hides#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "mkdirp": "^1.0.4"
  }
}
