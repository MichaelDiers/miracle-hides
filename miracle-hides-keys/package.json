{
  "name": "miracle-hides-keys",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:client:plain:dev": "npm run build:client:plain:generic && npm run build:client:plain:uglyfy:dev",
    "build:client:plain:prod": "npm run build:client:plain:generic && npm run build:client:plain:uglyfy:prod",
    "build:client:plain:generic": "npm run build:client:plain:html && npm run build:client:plain:images && npm run build:client:plain:sass:prod && npm run build:client:plain:tsc",
    "build:client:plain:html": "npx copyfiles -u 2 src-client/plain/*.html dist/client/plain",
    "build:client:plain:images": "npx copyfiles -u 2 src-client/plain/*.png dist/client/plain",
    "build:client:plain:uglyfy": "uglifyjs built/main.bundle.js -o ./dist/client/plain/client.min.js",
    "build:client:plain:uglyfy:prod": "npm run build:client:plain:uglyfy -- --compress --mangle",
    "build:client:plain:uglyfy:dev": "npm run build:client:plain:uglyfy -- --beautify",
    "build:client:plain:sass": "npx sass --stop-on-error ./src-client/plain/scss/client.scss",
    "build:client:plain:sass:debug": "npm run build:client:plain:sass -- ./dist/client/plain/client.css",
    "build:client:plain:sass:prod": "npm run build:client:plain:sass -- ./dist/client/plain/client.min.css --style=compressed",
    "build:client:plain:tsc": "npx tsc --project src-client/plain/tsconfig.client-plain.json && npx browserify built/main.js -o built/main.bundle.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test,src-client}/**/*.ts\" --fix",
    "test": "jest --config ./test/unit/jest.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "browserify": "^17.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-base-typescript": "^1.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "sass": "^1.53.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5",
    "uglify-js": "^3.16.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
